#!/bin/zsh
#Ícones
VOLUMEUP="<fn=2></fn>"
VOLUMEDOWN="<fn=2></fn>"
VOLUMEMUTE="<fn=2></fn>"
#Ações 
#UP="pactl set-sink-volume @DEFAULT_SINK@ +10%"
#DOWN="pactl set-sink-volume @DEFAULT_SINK@ -10%"
#MUTE="pactl set-sink-mute @DEFAULT_SINK@ toggle"
VOL="$(amixer get Master | tail -n1 | sed -r 's/.*\[(.*)%\].*/\1/')"

if [ "$VOL" -eq 0 ]; then
  echo "${VOLUMEMUTE}${VOL}%"
elif [ "$VOL" -eq 5 ]; then
  echo "${VOLUMEDOWN}${VOL}%"
elif [ "$VOL" -eq 33 ]; then
  echo "${VOLUMEDOWN}${VOL}%"
elif [ "$VOL" -eq 50 ]; then
  echo "${VOLUMEDOWN}${VOL}%"
elif [ "$VOL" -eq 62 ]; then
  echo "${VOLUMEDOWN}${VOL}%"
elif [ "$VOL" -ge 71 ]; then
  echo "${VOLUMEUP}${VOL}%"
fi
