Config { font = "xft:Ubuntu:weight=bold:pixelsize=14:antialias=true:hinting=true"
       , additionalFonts = [ "xft:Mononoki:pixelsize=14:antialias=true:hinting=true"
                           , "xft:Font Awesome 5 Free Solid:pixelsize=14"
                           , "xft:Font Awesome 5 Brands:pixelsize=14"
                           , "xft:Font Awesome 5 Regular:pixelsize=14"
                           ]
       , borderColor = "#black"
       , border = TopB
       , bgColor = "black"
       , fgColor = "#1919e6"
       , alpha = 255
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = True
       , hideOnStart = False
       , iconRoot = ".xmonad/xpm/"  -- default: "."
       , allDesktops = True
       , overrideRedirect = True
       , commands= [ Run Network "ens34" ["-L","0","-H","32",
                                          "--low","green","--high","red"] 8
                    , Run Cpu ["-t","CPU: (<total>%)","-L","1","-H","50","--normal","green","--high","red"] 10
                    --, Run Cpu ["-t", "<fn=2>\xf108</fn>  cpu: (<total>%)","-H","50","--high","red"] 20
                    , Run CoreTemp       [ "--template" , "Temp: <core0>°C|<core1>°C"
                             , "--Low"      , "70"        -- units: °C
                             , "--High"     , "80"        -- units: °C
                             , "--low"      , "green"
                             , "--normal"   , "orange"
                             , "--high"     , "red"
                             ] 25
                    , Run DiskU [("/", "<fn=2>\xf0c7</fn>  HD: <free> free")] [] 20
                    , Run Memory ["-t", "<fn=2>\xf538</fn>  Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "<fc=#1919e6></fc>%H:%M<fn=2>\xf017</fn>" "data" 10
                    , Run MPD ["-t",
             " <title> [<flags>]",
             "--", "-P", ">>", "-Z", "|", "-S", "><"] 20
                    -- Alguns ícones
                    , Run Com "echo" ["<fn=2>\xf011</fn>"] "botao" 3600
                    , Run Com "echo" ["<fn=2>\xf1ec</fn>"] "calculator" 3600
                    , Run Com "echo" ["<fn=2>\xf6ff</fn>"] "net" 3600
                    , Run Com "echo" ["<fn=2>\xf108</fn>"] "print" 3600
                    , Run Com "echo" ["<fn=2>\xf001</fn>"] "music" 3600
                    , Run Com "echo" ["<fn=2>\xf028</fn>"] "sound" 3600
                    , Run Com ".local/bin/volume" [] "volume" 1
                    , Run UnsafeStdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
      , template = "<action=`~/.config/rofi/bin/launcher_colorful`><icon=haskell_20.xpm/></action><box type=Bottom width=1 color=blue> %UnsafeStdinReader% </box> }{<box type=Bottom width=1 color=#b9003c><fc=#b9003c><action=`~/.config/rofi/bin/applet_mpd`>%music%%mpd%</action></fc></box>|<box type=Bottom width=1 color=#5d5cff><fc=#5d5cff><action=`~/.config/rofi/bin/menu_apps`>%cpu%-%coretemp%</action></fc></box>|<box type=Bottom width=1 color=#af14ff><fc=#af14ff><action=`terminator -e htop`>%memory% * %swap%</action></fc></box>| <box type=Bottom width=1 color=#e60fff><fc=#e60fff><action=`nautilus`>%disku%</action></fc></box>|<box type=Bottom width=1 color=#25e0dc><fc=#25e0dc><action=`~/.config/rofi/bin/menu_quicklinks`>%net% %ens34%</action></fc></box>|<box type=Bottom width=1 color=#5d5cff><fc=#5d5cff><action=`~/.local/bin/volumeup` button=4><action=`~/.local/bin/volumedown` button=5><action=`~/.local/bin/volumemute` button=1>%sound%%volume%</action></action></action></fc></box>|<box type=Bottom width=1 color=#af14ff><fc=#af14ff><action=`kcalc`>%calculator%</action></fc></box>|<box type=Bottom width=1 color=#b9003c><fc=#b9003c><action=`~/.config/rofi/bin/menu_screenshot`>%print%</action></fc></box>| <box type=Bottom width=1 color=#b9003c><fc=#b9003c><action=`~/.config/rofi/bin/applet_time`>%data%</action></fc></box>|  <box type=Bottom width=1 color=blue><fc=#ff0000><action=`~/.config/rofi/bin/applet_powermenu`>%botao%</action></fc></box>  "

